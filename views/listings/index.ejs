<% layout('/layouts/boilerplate.ejs') %>
  <body>
    <h3>All listing</h3> <br>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for (let listing of allListings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="card col listing-card" style="width: 20rem;">
            <img src="<%=listing.image%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
            <!-- <div class="card-img-overlay"> shubh</div> -->
            <br><br>
            <div class="card-body">
              <b>
                <p class="card-text">
                  <%=listing.title%>
              </b>
              <br>
              &#x20B9 <%=listing.price.toLocaleString("en-IN")%> /night
                </p>
            </div>
            <br>
          </div>
        </a>
          <% } %>
    </div>

  </body>