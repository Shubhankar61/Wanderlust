<% layout('/layouts/boilerplate.ejs') %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><b class="card-title ">
                    <%= listing.title%>
                </b></h3>
        </div>
        <div class="card col-6 offset-2 show-card listing-card">
            <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_img" />
            <div class="card-body"><br>
                <p class="card-text">
                    <b>Description:- </b>
                    <%=listing.description%> <br>
                        <b>Price:- </b> &#x20B9; <%=listing.price.toLocaleString("en-IN")%> <br>
                            <b>Location:- </b>
                            <%=listing.location%> <br>
                                <b>Country:- </b>
                                <%=listing.country%>

                </p>
            </div>

        </div>
        <div class="btns">
            <br>
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-2">Edit </a>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                <!-- Above line is working -->
                <button class="btn btn-dark  offset-4">Delete</button>
            </form>
        </div>


        <div class="col-8 offset-2 mb-3">
            <hr />
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range " />
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please add some comment for review </div>
                </div>
                <button class="btn btn-dark ">Submit</button>
            </form>
            <hr />
            <p><b>All Review</b></p>
            <div class="row">
                <% for(review of listing.reviews) {%>
                    <div class="card col-5 ms-2 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Rishabh</h5>
                            <p class="card-text">
                                <%=review.comment %>
                            </p>
                            <p class="card-text">
                                <%=review.rating %>â˜†
                            </p> 
                            <form class="mb-3"
                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="POST">
                                <input type="hidden" name="listingId" value="<%= listing._id %>">
                                <button class="btn btn-dark">Delete</button>
                            </form>




                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>